{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "debug-current-test",
      "type": "pwa-node",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": ["test", "--inspect-brk", "--allow-all"],
      "attachSimplePort": 9229
    },
    {
      "name": "Attach",
      "port": 9229,
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "site",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "program": "src/bin.ts",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all"],
      "args": ["site"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "name": "--list",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "program": "src/bin.ts",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all"],
      "args": ["--list"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "name": "--print-graph",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "program": "src/bin.ts",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all"],
      "args": ["--print-graph"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    }
  ]
}
