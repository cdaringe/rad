{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach by Process ID",
      "processId": "${command:PickProcess}",
      "sourceMaps": false,
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "bin - basic",
      "program": "${workspaceFolder}/src/bin.js",
      "args": [
        "${workspaceFolder}/test/fixtures/basic/rad.js"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test tasks",
      "program": "${workspaceRoot}/node_modules/ava/profile.js",
      "args": [
        "${workspaceRoot}/test/task.test.js"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "test file",
      "program": "${workspaceRoot}/node_modules/ava/profile.js",
      "args": [
        "${file}"
      ],
      "skipFiles": [
        "<node_internals>/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "file",
      "program": "${file}",
      "skipFiles": [
        "<node_internals>/**/*.js"
      ],
      "sourceMaps": false
    }
  ]
}
